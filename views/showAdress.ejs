        <main class="container mn">
            <div class="row">
                <% for(let i=0; i < data.length; i++) { %>
                    <div class="col-md-6">
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title"><strong>Name: </strong>
                                    <%= data[i].address.name %>
                                </h5>
                                <p class="card-text"><strong>Address: </strong>
                                    <%= data[i].address.CAddress %>
                                </p>
                                <p class="card-text"><strong>Street: </strong>
                                    <%= data[i].address.street %>
                                </p>
                                <p class="card-text"><strong>City: </strong>
                                    <%= data[i].address.city %>
                                </p>
                                <p class="card-text"><strong>State: </strong>
                                    <%= data[i].address.state %>
                                </p>
                                <p class="card-text"><strong>PIN: </strong>
                                    <%= data[i].address.pin %>
                                </p>
                                <form action="/defaultAddress?id=<%=data[i].address._id %>" method="post">
                                    <button type="submit" class="btn btn-primary">Set as Default</button>
                                </form><br>
                                <div class="d-flex justify-content-between">
                                    <a href="/editAddress?addressId=<%= data[i].address._id %>">
                                        <button class="btn btn-primary btu">
                                            <i class="ri-edit-box-fill icon"></i> Edit
                                        </button>
                                    </a>
                                    <form action="/deleteAddress" method="post" class="delete-form">
                                        <input type="hidden" name="addressId" value="<%= data[i].address._id  %>">
                                        <button type="button" class="btn btn-danger btu delete-btn" data-bs-toggle="modal" data-bs-target="#deleteConfirmationModal" data-address-id="<%= data[i].address._id %>">
                                            <i class="ri-delete-bin-fill icon"></i> Delete
                                        </button>
                                    </form>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                    <% } %>
            </div>
            <div class="row mt-3">
                <div class="col-md-6">
                    <a href="/AddAdress" class="btn btn-success btu">Add Address</a>
                </div>
            </div>
        </main>

        <!-- Delete Confirmation Modal -->
        <div class="modal fade" id="deleteConfirmationModal" tabindex="-1"
