<script>
    function resetErrors() {
        document.getElementById('newNameError').innerHTML = '';
    }

    function validateForm() {
        // Reset error messages
        resetErrors();

        // Get form input values
        const newName = document.getElementById('newName').value.trim();

        const newNameE = document.getElementById('newNameError');

        const newNameErrMess = [];

        if (newName === "") {
            newNameErrMess.push("This field is required");
        }
        newNameE.innerHTML = newNameErrMess.join(',');

        // Check if there are any error messages
        return newNameErrMess.length === 0;
    }
</script>

